<h1>Add a New Transaction</h1>

<%= form_for [@category, @transaction] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount, required: true %>
  </div>

  <div class="field">
    <%= f.label :categories, 'Categories' %>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  </div>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back', category_transactions_path(@category) %>

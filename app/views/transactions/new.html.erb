<h1>New Transaction for <%= @category.name %></h1>

<%= form_for [@category, @transaction] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount, required: true %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.collection_select :category_id, @categories, :id, :name, {}, { required: true } %>
  </div>
  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back', category_transactions_path(@category) %>

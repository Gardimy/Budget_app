<div class="transaction-details-container">
<h1 class="transaction-details-header">
<%= @category.name %> Transactions
</h1>

<div class="category-image">
<%= image_tag @category.icon, alt: "Category icon" if @category.icon.present? %>
</div>

<p class="total-amount">
Total Amount: <%= number_to_currency(@total_amount) %>
</p>
  <ul class="transaction-list">
    <% @transactions.each do |transaction| %>
      <li class="transaction-item">
        <div class="transaction-info">
          <%= transaction.name %> - Amount: <%= number_to_currency(transaction.amount) %>
        </div>
        <div class="transaction-meta">
          Transaction ID: <%= transaction.id %><br>
          Transaction Date: <%= transaction.created_at %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="transaction-links">
  <%= link_to 'Add a new transaction', new_category_transaction_path(@category), style: 'display: inline-block; padding: 10px 0; background-color: green; color: white; text-decoration: none; border: 1px solid white; border-radius: 0; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; width: 100%; text-align: center;', class: 'new-category-button' %>
    <%= link_to 'Back', categories_path, class: "back-link6" %>
  </div>
</div>

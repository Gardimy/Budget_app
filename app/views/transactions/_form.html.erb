<%= form_for [@category, transaction] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
  <%= f.label :category_id, 'Category' %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
</div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>

<h1 class="category-title">Add a New Category</h1>

<%= form_for @category, html: { class: 'category-form' } do |f| %>
  <div class="field">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, required: true, class: 'form-input' %>
  </div>

  <% icon_options = [
    ['Economy', image_path('Economy.png')],
    ['Computing', image_path('Computing.png')],
    ['Technology', image_path('Technology.png')],
    ['Transportation', image_path('Transportation.png')],
    ['Education', image_path('Education.png')],
    ['Agriculture', image_path('Agriculture.png')],
    ['Books', image_path('Books.png')],
    ['Politics', image_path('Politics.png')],
    ['Motocicle', image_path('Motocicle.png')],
    ['CleaningS', image_path('CleaningS.png')],
  ] %>

  <div class="field">
    <%= f.label :icon, class: 'form-label' %>
    <%= f.select :icon, options_for_select(icon_options), prompt: "Choose Category", id: "icon-select", class: 'form-select' %>
  </div>

  <div class="field">
    <%= f.label :selected_icon, "Selected Icon", class: 'form-label' %>
    <% if @category.icon.present? %>
      <%= image_tag @category.icon, class: 'selected-icon' %>
    <% else %>
    <% end %>
  </div>

  <%= f.submit 'Save', class: 'submit-button' %>
<% end %>

<%= link_to 'Back', categories_path, class: 'back-link' %>

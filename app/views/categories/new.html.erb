<h1>Add a New Category</h1>

<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :icon %>
    <%= f.text_field :icon, required: true %>
  </div>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back', categories_path %>

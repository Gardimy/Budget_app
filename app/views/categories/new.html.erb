<h1>Add a New Category</h1>

<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <% icon_options = [
    ['Economy', image_path('Economy.png')],
    ['Computing', image_path('Computing.png')],
    ['Technology', image_path('Technology.png')],
    ['Transportation', image_path('Transportation.png')],
    ['Education', image_path('Education.png')],
    ['Agriculture', image_path('Agriculture.png')],
    ['Books', image_path('Books.png')],
    ['Politics', image_path('Politics.png')],
    ['Motocicle', image_path('Motocicle.png')],
    ['CleaningS', image_path('CleaningS.png')],
  ] %>

  <div class="field">
    <%= f.label :icon %>
    <%= f.select :icon, options_for_select(icon_options), prompt: "Choose Category", id: "icon-select" %>
  </div>

  <div class="field">
    <%= f.label :selected_icon, "Selected Icon" %>
    <% if @category.icon.present? %>
      <%= image_tag @category.icon %>
    <% else %>
    <% end %>
  </div>

  <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back', categories_path %>

<div class="categories-container">
  <ul class="category-list">
    <% @categories.each do |category| %>
      <li class="category-item">
        <div class="category-card">
          <div class="category-image">
            <%= image_tag category.icon, alt: "Category icon" if category.icon.present? %>
          </div>
          <div class="category-details">
            <h2><%= link_to category.name, category_path(category) %></h2>
            <p>Total Amount: <%= number_to_currency(@total_amounts[category.id]) %></p>
          </div>
        </div>
        <div class="category-actions">
          <%= button_to "Remove", category_path(category), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new category', new_category_path, class: 'new-category-button' %>
</div>

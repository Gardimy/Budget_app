<h1>Categories</h1>
<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category) %>
      - Total Amount: <%= number_to_currency(@total_amounts[category.id]) %>
	  <span class="Delete"><%= button_to "Remove", category_path(category), method: :delete, data: { confirm: "Are you sure?" } %></span>
	  </li>
  <% end %>
</ul>
<%= link_to 'Add a new category', new_category_path %>
